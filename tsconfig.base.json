{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./lib",
    "baseUrl": "./",
    "strict": false,
    "noUnusedLocals": false,
    "lib": ["ES7", "ES2020", "DOM"],
    "esModuleInterop": true,
    "paths": {
      "@jagz-corp/*": ["packages/*/src/"]
    }
  },
  "exclude": ["node_modules", "lib"]
}
